CREATE TABLE budget_type (
	id SERIAL PRIMARY KEY NOT NULL,
	name TEXT NOT NULL
);

CREATE TABLE category (
	id SERIAL PRIMARY KEY,
	name TEXT NOT null,
	color text not NULL
);

CREATE TABLE operation_type (
	id SERIAL PRIMARY KEY,
	name TEXT NOT null
);

CREATE TABLE budget (
	id SERIAL PRIMARY KEY,
	name TEXT NOT null,
	id2 INTEGER,
	foreign key (id2) references budget_type (id)
);

CREATE TABLE operation (
	id SERIAL PRIMARY KEY,
	amount FLOAT NOT null,
	description text not null,
	id2 INTEGER,
	id3 INTEGER,
	id4 INTEGER,
	foreign key (id2) references budget (id),
	foreign key (id3) references category (id),
	foreign key (id4) references operation_type (id)
);

